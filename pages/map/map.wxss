/* pages/map/map.wxss */
.icon-image{
  width:100rpx;
  height:100rpx;
  margin: 20rpx 70rpx 0;
}

.mapTab{
  margin: 0 0 10rpx 10rpx;
  color:  #666;
  font-size:15px;
  display: flex;
  flex-direction: row;
  justify-content:space-around;
}
.map_container{ 
    height: 350px; 
    border: 2rpx solid #2a579a;
    border-radius: 10px;
    margin-left: 10rpx;
    margin-right: 10rpx;
    padding: 10rpx 10rpx;
} 
.map { 
    height: 100%; 
    width: 100%; 
} 
.place_info{
  height: 100%;
  display:flex;
  flex-direction:column;
  box-sizing:border-box;
  margin: 25rpx 20rpx ;
  color:  #666;
  font-size:14px;
  background-color:#f5f5f5;
}
.tabText{
  margin:0 0 0 90rpx;
}
.mapSelected{
  border: 1px #2a579a solid;
  border-radius: 20%;
}